@using System.Security.Claims
@{
    ViewData["Title"] = "Account Settings";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success position-absolute start-50 translate-middle-x">@ViewBag.Message</div>
}

<div class="card shadow p-4">
    <h2 class="mb-3">User Details</h2>
    <hr />

    <dl class="row">
        <!-- Kullanıcının ID'sini (NameIdentifier claim) görüntüler -->
        <dt class="col-sm-3">User ID</dt>
        <dd class="col-sm-9">@(User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.NameIdentifier)?.Value)</dd>
        
        <!-- Kullanıcının ismini görüntüler (Name claim) -->
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <!-- Kullanıcının e-posta adresini görüntüler (Email claim) -->
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <!-- Kullanıcının telefon numarasını görüntüler (PhoneNumber claim) -->
        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="UpdateProfile" class="btn btn-warning">Edit</a>
    </div>
</div>
