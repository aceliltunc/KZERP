@using KZERP.MVC.Models
@model AccountSettingsViewModel
@{  
    ViewData["Title"] = "Account Settings";
}

<h2>@ViewData["Title"]</h2>

@if(ViewBag.Message != null){
    <div class="alert alert-succes position-absolute start-50 translate-middle-x">@ViewBag.Message</div>
}

<div class="position-relative">
    <div class="position-absolute top-0 start-0">
        <a href="#">dsadsaas</a>
        <a href="#">dasd</a>
        <a href="#">dsad</a>
    </div>
</div>

<form asp-action="UpdateProfile" method="post" class="mb-4 border-0 position-absolute start-50 translate-middle-x" style="width: 400px;">
    <div class="form-group">
        <label asp-for="UserName" class="form-label"></label>
        <input type="text" asp-for="UserName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input type="text" asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control">
    </div>
    <div class="form-group mt-3"></div>
        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

