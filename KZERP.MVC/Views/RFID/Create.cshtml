@using KZERP.Core.Entities.RfidLogs
@model RfidLogs
@{
    ViewData["Title"] = "Create RFID";
}

<h2>Create RFID</h2>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CardUID" class="control-label"></label>
        <input asp-for="CardUID" class="form-control" />
        <span asp-validation-for="CardUID" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="DataContent" class="control-label"></label>
        <textarea asp-for="DataContent" class="form-control"></textarea>
        <span asp-validation-for="DataContent" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="ScanTime" class="control-label"></label>
        <input asp-for="ScanTime" class="form-control" />
        <span asp-validation-for="ScanTime" class="text-danger"></span>
    </div>


    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
