@using KZERP.Core.Entities.Warehouses
@model IEnumerable<Warehouse>

@{
    ViewData["Title"] = "Warehouses List";
}

<h2> Warehouses List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Warehouse ID</th>
            <th>Name</th>
            <th>Location</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var warehouse in Model)
        {
            <tr>
                <td>@warehouse.Id</td>
                <td>@warehouse.Name</td>
                <td>@warehouse.Location</td>

                <td>
                    <a asp-action="Details" asp-route-id="@warehouse.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@warehouse.Id" class="btn btn-warning btn-sm">Edit</a>
                    <!-- Delete Button triggers Modal -->
                    <button type="button" class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                            data-id="@warehouse.Id"
                            data-name="@warehouse.Name">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Warehouse</a>

<!-- Bootstrap Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="deleteMessage">Are you sure you want to delete this warehouse?</p>
      </div>
      <div class="modal-footer">
        <form id="deleteForm" method="post" asp-action="Delete">
            <input type="hidden" name="id" id="deleteWarehouseId" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // butona tıklayan element
            var warehouseId = button.getAttribute('data-id');
            var warehouseName = button.getAttribute('data-name');

            // Mesajı güncelle
            var message = deleteModal.querySelector('#deleteMessage');
            message.textContent = "Are you sure you want to delete '" + warehouseName + "' ?";

            // Hidden input'a warehouseId koy
            var inputId = deleteModal.querySelector('#deleteWarehouseId');
            inputId.value = warehouseId;
        });
    </script>
}